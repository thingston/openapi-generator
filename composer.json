{
    "name": "thingston/openapi",
    "description": "OpenApi Generator",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Thingston\\OpenApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thingston\\OpenApi\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs",
        "phpcbf": "php vendor/bin/phpcbf",
        "phpstan": "php vendor/bin/phpstan"
    },
    "authors": [
        {
            "name": "Pedro Ferreira",
            "email": "pedro@thingston.com"
        }
    ]
}
